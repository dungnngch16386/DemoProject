<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bookmarks.Demo3Activity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/border_custom2">
        <ImageButton
            android:id="@+id/ibBackHistory"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#F1EFEF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/ibHistory"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#F1EFEF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/inputSearch2"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:hint="Search..."
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawablePadding="5dp"
        android:inputType="textVisiblePassword"
        android:background="@drawable/border_custom6"/>

    <ListView
        android:id="@+id/lvHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>