<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Demo3Activity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/border_custom2">
        <ImageButton
            android:id="@+id/ibCategory"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#F1EFEF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tvNameCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmark"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/ibBookmark"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="#F1EFEF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/ivNoti"
                android:text="Bức tranh sơn dầu đẹp"/>
            <ImageView
                android:id="@+id/ivNoti"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:scaleType="fitXY"
                android:src="@drawable/img_paper"/>
            <TextView
                android:id="@+id/tvDateNoti2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="26/6/2018"
                android:layout_toRightOf="@+id/ivNoti"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/ivNoti2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_close_black_24dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>